<h1>Users</h1>

<table>
  <thead>
    <tr>
      <th>Handle<th>
      <th>display_name<th>
      <th>Bio<th>
      <th>Birthday<th>
    </tr>
  </thead>

   <tbody>
      <% @users.each do |user| %>
         <tr>
            <td><%=user.handle%></td>
            <td><%=user.display_name%></td>
            <td><%=user.bio%></td>
            <td><%=user.born_at%></td> 
            <td><%= link_to "Show", user_path(user)%></td>
            <td><%= link_to "Edit", edit_user_path(user)%></td>
            <td><%= link_to "Delete", destroy_user_path(user), data:{turbo_method: :delete, turbo_confirm: "Are you sure?"}%></td>
         </tr>
         
      <% end %>
   </tbody>
</table>

<%= link_to "New user", new_user_path%>
 

