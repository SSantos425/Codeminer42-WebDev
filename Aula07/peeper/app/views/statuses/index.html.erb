<h1>Statuses</h1>

<table>
  <thead>
    <tr>
      <th>Body<th>
    </tr>
  </thead>

   <tbody>
      <% @statuses.each do |status| %>
        <tr>
        <td><%=status.body%></td>
        <td><%= link_to "Show", status_path(status)%></td>
        <td><%= link_to "Edit", edit_status_path(status)%></td>
        <td><%= link_to "Delete", destroy_status_path(status), data:{turbo_method: :delete, turbo_confirm: "Are you sure?"}%></td>
        </tr>
      <% end %>
   </tbody>
</table>

<%= link_to "New status", new_status_path%>
 

